<h2><%= @user.name %></h2>

<%= render 'friendships/friend_status' %>
<br>


<%= render 'memberships/user_bets' %>


  <div class="pending-bets requested_bet">
    <% if @requested_bets %>
    <h3>Requested Bets</h3>

      <% @requested_bets.each do |bet| %>
          <div class="bet">
            <ul>
              <span class="bet_title"><%= link_to bet.title, bet %></span>
              <br>
              <li>Wager: <%= bet.wager %> </li>
              <li>Odds: <%= bet.odds %> </li>
          </div>
      <% end %>

        <br>
      <% end %>
  </div>


<%= render 'contracts/user_rounds' %>

<%= render 'friendships/user_friends' %>
<br>

<br>
<h5>ALL USERS (for development convenience)</h5>
<ol>
<% User.all.each do |u| %>
  <li><%= link_to u.name, u %></li>
<% end %>



